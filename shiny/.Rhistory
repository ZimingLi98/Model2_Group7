library(shiny)
library(shiny)
ui <- navbarPage(title = "Test your body fat today!", id = "navbar",
# 默认页面 - 文字说明
tabPanel("Welcome !",
h3("Free body fat predictor"),
p("...")
),
# Menu部分
navbarMenu("Menu",
tabPanel("Instruction",
h3("How to use"),
p("Select ur model")
),
tabPanel("Prediction",
sidebarLayout(
sidebarPanel(
# 选择模型
selectInput("model_choice", "Model", choices = c("Model 1", "Model 2")),
# 模型1输入
conditionalPanel(
condition = "input.model_choice == 'Model 1'",
numericInput("weight1", "Weight", 70),
numericInput("height1", "Height", 170),
sliderInput("age2", "Age", min = 0, max = 100, value = 0)
),
# 模型2输入
conditionalPanel(
condition = "input.model_choice == 'Model 2'",
numericInput("weight2", "Weight", 70),
numericInput("height2", "Height", 170),
sliderInput("age2", "Age", min = 0, max = 100, value = 0),
numericInput("chest", "Chest", 90),
numericInput("abdomen", "Abdomen", 85),
numericInput("waist", "Waist", 80),
numericInput("thigh", "Thigh", 60)
),
# Predict按钮
actionButton("predict_btn", "Predict")
),
mainPanel(
# 预留图片板块
#img(src = "your_image_path1.jpg", height = "100px"),
#img(src = "your_image_path2.jpg", height = "100px"),
# 输出预测结果
h3("Result"),
verbatimTextOutput("prediction")
)
)),
tabPanel("Resources",
h3("References"),
p("...")
)
)
)
server <- function(input, output) {
output$prediction <- renderText({
# 只有当Predict按钮被点击时才执行
if(input$predict_btn == 0) return(NULL)
isolate({
# 根据所选模型获取输入并计算预测
if(input$model_choice == "Model 1") {
# 使用您的模型1代码
# result <- model1_function(input$weight1, input$height1, input$age1)
result <- paste("Model 1: ", "Result")
} else {
# 使用您的模型2代码
# result <- model2_function(input$weight2, input$height2, input$age2, input$chest, input$abdomen, input$waist, input$thigh, input$degree)
result <- paste("Model 2: ", "Result")
}
return(result)
})
})
}
shinyApp(ui = ui, server = server)
